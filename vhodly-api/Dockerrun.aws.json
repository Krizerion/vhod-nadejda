{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "vhodly-api",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.eu-central-1.amazonaws.com/vhodly-api:latest",
      "essential": true,
      "memory": 2048,
      "portMappings": [
        {
          "hostPort": 3000,
          "containerPort": 3000
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/elasticbeanstalk/vhodly-api",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "vhodly-api"
        }
      }
    }
  ]
}
